<!doctype html>
<html lang="en">

<head>
  <title>Title</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

</head>

<body>
  <header>
    <!-- place navbar here -->
  </header>
  <main>
    <!-- Nav tabs -->
    <div class="container">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <a id="listuser" href="/danh-sach-nguoi-dung" class="nav-link" aria-selected="false">Danh sách người dùng</a>
        </li>
        <li  class="nav-item" role="presentation">
          <a id="adduser" href="/them-nguoi-dung" class="nav-link" aria-selected="false">Thêm người dùng</a>
        </li>
        <li class="nav-item" role="presentation">
          <a id="listcomic" href="/danh-sach-truyen" class="nav-link" aria-selected="false">Danh sách truyện</a>
        </li>
        <li class="nav-item" role="presentation">
          <a id="addcomic" href="/them-truyen" class="nav-link active" aria-controls="add-comic" aria-selected="true">Thêm truyện</a>
        </li>
      </ul>
      
      <!-- Tab panes -->
      <div class="tab-content d-flex row justify-content-center">
        <form action="/them-truyen" id="formThemTruyen" method="post" class="m-3" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="" class="form-label">Tên truyện:</label>
            <input type="text"
              class="form-control" name="tenTruyen" id="tenTruyen" aria-describedby="helpId" placeholder="Tên truyện" autocomplete="off">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Tác giả</label>
            <input type="text" class="form-control" name="tacGia" id="tacGia" placeholder="Tác giả">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Mô tả</label>
            <input type="text" class="form-control" name="moTa" id="moTa" placeholder="Mô tả">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Ngày xuất bản</label>
            <input type="date" class="form-control" name="ngayXuatBan" id="ngayXuatBan" placeholder="Ngày xuất bản">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Ảnh bìa</label>
            <input class="form-control form-control-sm" id="formFileSm" type="file" name="anhBia" >
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Ảnh nội dung</label>
            <input class="form-control form-control-sm" id="formFileSm" type="file" name="anhNoiDung" multiple>
          </div>
          <% if(typeof msg === "string" && !(msg.trim().length === 0)){%>
          <span class="text-danger"><%= msg %></span>
          <%}%>
          <button type="submit" class="btn btn-primary w-100">Thêm truyện</button>
        </form>
      </div>    
    </div>
  </main>
  <footer>
    <!-- place footer here -->
  </footer>

  <script type='text/javascript'>
      let myidtoinsert = window.location.toString();
      if(myidtoinsert.indexOf('?') != -1){
        myidtoinsert = myidtoinsert.substring(myidtoinsert.lastIndexOf('/')+1, myidtoinsert.indexOf('?'));
      } else {
        myidtoinsert = myidtoinsert.substring(myidtoinsert.lastIndexOf('/')+1);
      }
      document.getElementById("listuser").href += "/" + myidtoinsert;
      document.getElementById("adduser").href += "/" + myidtoinsert;
      document.getElementById("listcomic").href += "/" + myidtoinsert;
      document.getElementById("addcomic").href += "/" + myidtoinsert;
      document.getElementById("formThemTruyen").action += "/" + myidtoinsert;
  </script>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>
</body>

</html>